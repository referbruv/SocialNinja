{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=app.db;"
  },
  "Oidc": {
    "providers": [
      {
        "name": "facebook",
        "clientId": "xxxxxxxxxxxxxxxxxxxxxx",
        "clientSecret": "xxxxxxxxxxxxxxxxxxxxxx",
        "redirectUrl": "/users/me",
        "loginUrl": "/users/ExternalLogin?provider=facebook",
        "icon": "icon-facebook2",
        "cssClass": "btn btn-block btn-primary",
        "buttonText": "SignIn with Facebook"
      },
      {
        "name": "google",
        "clientId": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com",
        "clientSecret": "xxxxxxxxxxxxxxxxxxxxxx",
        "redirectUrl": "/users/me",
        "loginUrl": "/users/ExternalLogin?provider=google",
        "icon": "icon-google",
        "cssClass": "btn btn-block btn-danger",
        "buttonText": "SignIn with Google"
      }
    ]
  }
}
